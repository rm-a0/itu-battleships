<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BattleshipsAvalonia.App"
             xmlns:local="using:BattleshipsAvalonia"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush x:Key="Primary" Color="#4DA8FF" />
        <SolidColorBrush x:Key="Secondary" Color="#1A3C5C" />
        <SolidColorBrush x:Key="Ternary" Color="#172A3C" />
        <SolidColorBrush x:Key="SuccessGreen" Color="#34C759" />
        <SolidColorBrush x:Key="SuccessRed" Color="#FF4C4C" />
        <SolidColorBrush x:Key="Background" Color="#121212" />
        <SolidColorBrush x:Key="BackgroundSecondary" Color="#171B21" />
        <SolidColorBrush x:Key="TextPrimary" Color="#E6ECEF" />
        <SolidColorBrush x:Key="TextSecondary" Color="#A0A8B0" />
    </Application.Resources>
</Application>
